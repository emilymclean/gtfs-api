open module def;

typealias Markdown = String

abstract class Link {
    title: String
    order: Int
}

class ContentLink extends Link {
    contentId: String
}

class ExternalLink extends Link {
    url: String
}

class NativeLink extends Link {
    nativeReference: String
}

class Content {
    id: String
    title: String
    content: Markdown
    externalLinks: Listing<ExternalLink> = new Listing {}
    contentLinks: Listing<ContentLink> = new Listing {}
    nativeLinks: Listing<NativeLink> = new Listing {}
}

typealias BannerSeverity = "info" | "warning" | "severe"

class Banner {
    title: String
    message: String?
    severity: BannerSeverity = "info"
    externalLinks: Listing<ExternalLink> = new Listing {}
    contentLinks: Listing<ContentLink> = new Listing {}
    nativeLinks: Listing<NativeLink> = new Listing {}
}

typealias Platform = "android" | "ios"